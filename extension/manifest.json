{
  "manifest_version": 3,
  "name": "Tabula",
  "version": "0.3.0",
  "description": "AI-powered tab intelligence. Captures and syncs tab data with Tabula desktop.",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "idle",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:21890/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tabula"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
